                                            "properties": {
                                                "allowAnyGameServer": {
                                                    "description": "Whether or not a GameServerToken is required to host a GameServer",
                                                    "type": "boolean"
                                                }
                                            },
                                            "required": ["allowAnyGameServer"]
                                        }
                                    },
                                    "required": ["success", "message"]
                                }
                            }
