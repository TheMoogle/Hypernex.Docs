                                            "type": "object",
                                            "properties": {
                                                "IsWSS": {
                                                    "description": "If the Socket uses SSL",
                                                    "type": "boolean"
                                                },
                                                "Port": {
                                                    "description": "The port the WebSocket is running on",
                                                    "type": "integer"
                                                }
                                            },
                                            "required": ["IsWSS", "Port"]
                                        }
                                    },
                                    "required": ["success", "message"]
